<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="500.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.40" fx:controller="FHOPE.Controller.RegisterController">

    <children>
        <Label layoutX="200.0" layoutY="50.0" prefHeight="150.0" prefWidth="149.0" text="Create an account " />

        <TextField fx:id="textUsername" layoutX="200.0" layoutY="150.0" />
        <Label layoutX="100.0" layoutY="150.0" text="Name" />

        <Label layoutX="100.0" layoutY="180.0" text="Password" />
        <PasswordField fx:id="textPassword" layoutX="200.0" layoutY="180.0" />

        <Label layoutX="100.0" layoutY="210.0" text="Email" />
        <TextField fx:id="textEmail" layoutX="200.0" layoutY="210.0" />

        <Label layoutX="100.0" layoutY="240.0" text="CardNumber" />
        <TextField fx:id="textCardNumber" layoutX="200.0" layoutY="240.0" />

        <Button fx:id="button" layoutX="250.0" layoutY="300.0" onAction="#handleSubmitButton" text="Submit" />

    </children>

</AnchorPane>